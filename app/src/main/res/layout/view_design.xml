<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_item"
    android:background="@drawable/bg_rv"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="20dp"
    android:orientation="horizontal">



<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:background="@drawable/bg_rv"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/titledoes"
            android:fontFamily="@font/mm"
            android:layout_marginTop="19dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textAllCaps="true"
            android:text="Final Project PMO"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/descdoes"
            android:fontFamily="@font/ml"
            android:layout_marginTop="8dp"
            android:textSize="18sp"
            android:textColor="#ADADAD"
            android:text="Buat Aplikasi CRUD"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/placedoes"
            android:fontFamily="@font/ml"
            android:layout_marginTop="8dp"
            android:textSize="18sp"
            android:textColor="#ADADAD"
            android:text="INDOOR"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/barangdoes"
            android:fontFamily="@font/ml"
            android:layout_marginTop="8dp"
            android:textSize="14sp"
            android:textColor="#ADADAD"
            android:text="Bawa Laptop dan Smartphone"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/datedoes"
                android:fontFamily="@font/ml"
                android:layout_marginTop="8dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="4dp"
                android:textSize="18sp"
                android:textColor="#F63EA5"
                android:text="12.00"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/infodoes"
                android:fontFamily="@font/ml"
                android:layout_marginTop="8dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="4dp"
                android:textSize="18sp"
                android:textColor="#F63EA5"
                android:text="22/12/20"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bg_rv"
        >
        <ImageView
            android:id="@+id/ic_dots"

            android:layout_marginRight="20dp"
            android:layout_marginTop="28dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:src="@drawable/ic_dots"/>
    </LinearLayout>
</LinearLayout>










</LinearLayout>
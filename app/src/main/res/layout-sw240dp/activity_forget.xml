<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Forget">
    <LinearLayout
        android:id="@+id/subjudul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="100dp"
        >
        <TextView
            android:id="@+id/gambar1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:text="Forget Your Password?"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:fontFamily="@font/mm"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/info"
        android:layout_below="@+id/subjudul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textStyle="normal"
            android:text="Enter your email, and we'll send you a link back to your account."
            android:textSize="15dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/ml"
            android:text="E-mail"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/bginputtask"
            android:fontFamily="@font/mm"
            android:hint="Enter your email"
            android:inputType="text"
            android:maxLength="25"
            android:paddingLeft="12dp"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="#B5B5B5" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/forget"
        android:layout_below="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnForget"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bgbtnnew"
            android:fontFamily="@font/mm"
            android:text="Reset Password"
            android:textAllCaps="false"
            android:textColor="#FFF"
            android:textSize="22sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/forget"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account?"
            android:fontFamily="@font/ml"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginLeft="80dp"
            android:textColor="#000">

        </TextView>
        <TextView
            android:id="@+id/tv_login"
            android:layout_width="wrap_content"
            android:text="Login"
            android:fontFamily="@font/ml"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:textColor="#52B2FF"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>

</RelativeLayout>